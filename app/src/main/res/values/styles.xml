<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="buttonTheme">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Day" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/day</item>
        <item name="colorPrimary">@color/colorPrimaryDay</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDay</item>
        <item name="colorAccent">@color/colorAccentDay</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="buttonTheme">@color/colorAccentDayLight</item>
        <item name="buttonThemeText">@color/colorPrimaryDarkDay</item>
        <item name="android:itemTextAppearance">@android:color/primary_text_light</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:actionMenuTextColor">@android:color/primary_text_light</item>
        <item name="actionMenuTextColor">@android:color/primary_text_light</item>
    </style>

    <style name="AppTheme.Night" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/night</item>
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="buttonTheme">@color/colorAccentNightLight</item>
        <item name="buttonThemeText">@color/color_white</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:actionMenuTextColor">@android:color/primary_text_light</item>
        <item name="actionMenuTextColor">@android:color/primary_text_light</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@android:color/primary_text_light</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

</resources>
